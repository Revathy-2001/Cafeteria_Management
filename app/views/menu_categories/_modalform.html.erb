
<%# To display the popup form %>
<div id="add_category_modal" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            Add Category
            <button type="button" class="closemodal" data-dismiss="modal">x</button>
            </div>
            <div class="modal-body">
               <%= form_with(url: "menu_categories", method: "post" , class: "AddCategory") do %>
                    Category Name:
                    <%= text_field_tag 'name', nil, class: 'AddCategory-text' %>
                     <div class="modal-footer">
                         <%= submit_tag "Create", class: "CreateCategory-button" %>
                    </div>
               <% end %>
            </div>
        </div>
    </div>
</div>
