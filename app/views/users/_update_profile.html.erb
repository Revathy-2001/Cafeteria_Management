<%# shows bootstrap modal when user/clerk/owner chose update profile option %>
<div class="modal hide fade" id="update_profile" tabindex="-1" role="dialog" aria-labelledby="User_profileModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">  <%# renders modal header %>
        <h5 class="modal-title" id="User_profileModal">User Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">  <%# renders modal body with the input feilds to update user profile %>
              <%# renders form to update a profile %>
              <%= form_with(url: user_update_profile_path,method: "post",class:"update_profile_form") do %>
                    <div  class = "Form-section">
                      <p class = "FormInput-label">Name: </p>
                      <%= text_field_tag 'first_name',@current_user.first_name, class: 'Profile-input' %>
                    </div>  <%# accepts name to update the existing value %>

                    <div class = "Form-section">
                      <p class = "FormInput-label">Email: </p>
                      <%= email_field_tag "email",@current_user.email, :pattern => "^(.+)@(.+)\.?(.+)$",class:"Profile-input" %>
                    </div>  <%# accepts email %>

                    <div class = "Form-section">
                      <p class = "FormInput-label">Phone No: </p>
                      <%= telephone_field_tag "phone_no",@current_user.phone_no,:pattern => "[0-9]{6,12}",class:"Profile-input" %>
                    </div>  <%# accepts phone no %>

                    <div class = "Form-section">
                      <%= submit_tag "Update", class:"Form-submit"  %>
                    </div> <%# submits the form with the details given %>
              <% end %>
      </div>
    </div>
  </div>
</div>
