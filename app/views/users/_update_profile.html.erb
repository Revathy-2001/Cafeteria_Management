<!-- Modal -->
<div class="modal hide fade" id="update_profile" tabindex="-1" role="dialog" aria-labelledby="User_profileModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="User_profileModal">User Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
              <%= form_with(url: "update_profile",method:"post",class:"update_profile_form") do %>
                    <div  class = "Form-section">
                      <p class = "FormInput-label">Name: </p>
                      <%= text_field_tag 'first_name',@current_user.first_name, class: 'Profile-input' %>
                    </div>
                    <div class = "Form-section">
                      <p class = "FormInput-label">Email: </p>
                      <%= email_field_tag "email",@current_user.email, class:"Profile-input" %>
                    </div>

                    <div class = "Form-section">
                      <p class = "FormInput-label">Phone No: </p>
                      <%= telephone_field_tag "phone_no",@current_user.phone_no,class:"Profile-input" %>
                    </div>

                    <div class = "Form-section">
                      <%= submit_tag "Update", class:"Form-submit"  %>
                    </div>
              <% end %>
      </div>
    </div>
  </div>
</div>
